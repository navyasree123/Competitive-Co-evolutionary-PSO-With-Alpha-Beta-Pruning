<?xml version="1.0"?>
<!DOCTYPE simulator [
<!ATTLIST algorithm id ID #IMPLIED>
<!ATTLIST problem id ID #IMPLIED>
<!ATTLIST measurements id ID #IMPLIED>
]>
<simulator>
    <algorithms>
        <algorithm id="normal" class="Coevolution.NormalCoevolution"/>
        <algorithm id="alphabeta" class="Coevolution.AlphaBetaCoevolution"/>
        <algorithm id="random" class="Coevolution.RandomCoevolution"/>
    </algorithms>
    <problems>
        <problem id="checkers" class="Game.Checkers"/>
    </problems>
    <measurements id="measurements" class="simulator.MeasurementSuite" resolution="500">
        <addMeasurement class="measurement.pso.Fitness"/>
        <addMeasurement class="measurement.nn.Weights"/>
        <addMeasurement class="measurement.player1.FMeasure"/>
        <addMeasurement class="measurement.player2.FMeasure"/>
        <addMeasurement class="measurement.final.FMeasure"/>
    </measurements>
    <simulations>
        <simulation samples="30">
            <algorithm idref="normal"/>
            <problem idref="checkers"/>
            <measurements idref="measurements" />
    	    <output format="TXT" file="data/normal.txt"/>
        </simulation>
        <simulation samples="30">
            <algorithm idref="alphabeta"/>
            <problem idref="checkers"/>
            <measurements idref="measurements" />
    	    <output format="TXT" file="data/alphabeta.txt"/>
        </simulation>
        <simulation samples="30">
            <algorithm idref="random"/>
            <problem idref="checkers"/>
            <measurements idref="measurements" />
    	    <output format="TXT" file="data/random.txt"/>
        </simulation>
    </simulations>
</simulator>
